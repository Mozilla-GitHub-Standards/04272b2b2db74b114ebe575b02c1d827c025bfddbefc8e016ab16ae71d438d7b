@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'

$slide-duration = 0.4s;

brick-deck {
  display: block;
  position: relative;
  overflow: hidden;
  height: 100%;
  width: 100%;

  & > brick-card {
    display: none;
    position: absolute !important;
    left: 0;
    right: 0;
    height: 100%;
    width: 100%;
    z-index: 0;
    opacity: 1;
    box-sizing(border-box);
    transformStyle(preserve-3d);
    transformed(translate(0%, 0%) scale(1));

    &[selected], &[transition] {
      display: block;
    }
  }
}

/*** General Slide Setup ***/

brick-deck[transition-type^="slide"] > brick-card,
brick-deck > brick-card[transition-type^="slide"] {
  z-index: 1;
}

brick-deck[transition-type^="slide"] > brick-card[transition-direction="reverse"],
brick-deck > brick-card[transition-type^="slide"][transition-direction="reverse"] {
  z-index: 2;
}

brick-deck[transition-type^="slide"] > brick-card,
brick-deck > brick-card[transition-type^="slide"],
brick-deck[transition-type^="slide"] > brick-card[hide],
brick-deck > brick-card[hide][transition-type^="slide"] {
  -webkit-transition: -webkit-transform $slide-duration ease;
  -moz-transition: -moz-transform $slide-duration ease;
  -ms-transition: -ms-transform $slide-duration ease;
  -o-transition: -o-transform $slide-duration ease;
  transition: transform $slide-duration ease;
}

/*** Right/Left Slide Styles ***/

brick-deck[transition-type="slide-right"] > brick-card[transition-direction="forward"],
brick-deck > brick-card[transition-direction="forward"][transition-type="slide-right"],
brick-deck[transition-type="slide-right"] > brick-card[hide][transition-direction="reverse"],
brick-deck > brick-card[hide][transition-direction="reverse"][transition-type="slide-right"],

brick-deck[transition-type="slide-left"] > brick-card[transition-direction="reverse"],
brick-deck > brick-card[transition-direction="reverse"][transition-type="slide-left"],
brick-deck[transition-type="slide-left"] > brick-card[hide][transition-direction="forward"],
brick-deck > brick-card[hide][transition-direction="forward"][transition-type="slide-left"] {
  transformed(translate(-100%, 0));
}


brick-deck[transition-type="slide-right"] > brick-card[transition-direction="reverse"],
brick-deck > brick-card[transition-direction="reverse"][transition-type="slide-right"],
brick-deck[transition-type="slide-right"] > brick-card[hide][transition-direction="forward"],
brick-deck > brick-card[hide][transition-direction="forward"][transition-type="slide-right"],

brick-deck[transition-type="slide-left"] > brick-card[transition-direction="forward"],
brick-deck > brick-card[transition-direction="forward"][transition-type="slide-left"],
brick-deck[transition-type="slide-left"] > brick-card[hide][transition-direction="reverse"],
brick-deck > brick-card[hide][transition-direction="reverse"][transition-type="slide-left"] {
  transformed(translate(100%, 0));
}

/*** Up/Down Slide Styles ***/

brick-deck[transition-type="slide-up"] > brick-card[transition-direction="reverse"],
brick-deck > brick-card[transition-direction="reverse"][transition-type="slide-up"],
brick-deck[transition-type="slide-up"] > brick-card[hide][transition-direction="forward"],
brick-deck > brick-card[hide][transition-direction="forward"][transition-type="slide-up"],

brick-deck[transition-type="slide-down"] > brick-card[transition-direction="forward"],
brick-deck > brick-card[transition-direction="forward"][transition-type="slide-down"],
brick-deck[transition-type="slide-down"] > brick-card[hide][transition-direction="reverse"],
brick-deck > brick-card[hide][transition-direction="reverse"][transition-type="slide-down"] {
  transformed(translate(0, -100%));
}

brick-deck[transition-type="slide-up"] > brick-card[transition-direction="forward"],
brick-deck > brick-card[transition-direction="forward"][transition-type="slide-up"],
brick-deck[transition-type="slide-up"] > brick-card[hide][transition-direction="reverse"],
brick-deck > brick-card[hide][transition-direction="reverse"][transition-type="slide-up"],

brick-deck[transition-type="slide-down"] > brick-card[transition-direction="reverse"],
brick-deck > brick-card[transition-direction="reverse"][transition-type="slide-down"],
brick-deck[transition-type="slide-down"] > brick-card[hide][transition-direction="forward"],
brick-deck > brick-card[hide][transition-direction="forward"][transition-type="slide-down"] {
  transformed(translate(0,100%));
}

/*** General Slide Show State ***/

brick-deck[transition-type^="slide"] > brick-card[transition],
brick-deck > brick-card[transition][transition-type^="slide"] {
  transformed(translate(0, 0));
}
